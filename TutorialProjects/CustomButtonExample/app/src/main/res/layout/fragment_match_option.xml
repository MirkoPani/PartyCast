<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9BCDB3"
    tools:context="com.example.mirko.custombuttonexample.viewpages.MatchOptionFragment">

    <com.example.mirko.custombuttonexample.customviews.CustomFontTextView
        android:id="@+id/customFontTextView"
        style="@style/textavatar"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="Scegli il numero di match che vuoi fare:"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/customFontTextView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/iniziaGioco">

        <RadioButton
            android:id="@+id/choose3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:layout_weight="1"
            android:checked="true"
            android:text="3" />

        <RadioButton
            android:id="@+id/choose5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="20px"
            android:text="5" />

        <RadioButton
            android:id="@+id/choose7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="20px"
            android:text="7" />

    </RadioGroup>

    <com.example.mirko.custombuttonexample.customviews.ButtonPlus
        android:id="@+id/iniziaGioco"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Inizia la sfida!"
        android:background="@color/lightBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />
</android.support.constraint.ConstraintLayout>
